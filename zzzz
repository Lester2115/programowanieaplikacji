        function silnia(liczba)
        {
            let silnia=1;
            for(let i=1;i<=liczba;i++)
            {
            silnia *= i;
            }

            return 'Silnia liczby ' + liczba + ' jest rÃ³wna ' + silnia;
        }

        alert(silnia(4));
        alert(silnia(2));
    </script>

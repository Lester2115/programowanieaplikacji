    <script>
// Sebastian Mordarski zadanie 1
        function pierwsze(liczba){
            let dzielniki = 0;

            for(let i=1; i<=liczba;i++)
            {
                if(liczba%i==0){
                    dzielniki ++;
                }
            }

            if(dzielniki==2){
                return "To liczba pierwsza";
            }

            else{
                return "To nie jest liczba pierwsza";
            }

        }

        alert(pierwsze(13));
        alert(pierwsze(30));
    </script>

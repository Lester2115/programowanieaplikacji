    <script>
        //Sebastian Mordarski zadanie 5

        let liczbyParzyste = [];

        for(i=1;i<=1000;i++)
        {
            if(i%2==0)
               {
                   liczbyParzyste.push(i);
               }
        }

        let dlugosc = liczbyParzyste.length;

        for(i=0;i<dlugosc;i++)
        {
            console.log(liczbyParzyste[i]);
        }
        let srednia=0;
        for(i=0;i<dlugosc;i++)
        {
            srednia+=liczbyParzyste[i];
        }

        console.log('Srednia liczb parzystych od 1 do 1000 wynosi : ' + srednia/dlugosc);
        
        console.log('Liczby od 100 do 200 : ');
        for(i=0;i<dlugosc;i++)
        {
            if(liczbyParzyste[i]>=100 && liczbyParzyste[i]<= 200)
            console.log(liczbyParzyste[i]);
        }
       
    </script>
